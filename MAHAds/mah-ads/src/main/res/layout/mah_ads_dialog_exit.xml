<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="20dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="20dp"
    android:background="@color/mah_dlg_main_lyt_shape"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/mah_dlg_title_lyt_shape"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingTop="4dp" >

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/mah_ads_dlg_title"
            android:textColor="@android:color/white"
            android:textSize="17sp" >
        </TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical" >

            <ImageButton
                android:id="@+id/mah_ads_dlg_exit_btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:contentDescription="@string/mah_ads_close"
                android:src="@drawable/ic_action_cancel_mah" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/lytProgsPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible" >

            <LinearLayout
                android:id="@+id/lytProg1MAHAdsExtDlg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@color/mah_dlg_btn_yes_no_background_selector"
                android:gravity="center_horizontal|top"
                android:orientation="vertical"
                android:paddingBottom="0dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="0dp" >

                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_height="70dp" >

                    <com.loopj.android.image.SmartImageView
                        android:id="@+id/ivProg1ImgMAHAds"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="0dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:src="@color/mah_ads_no_img_color" />

                    <com.mobapphome.mahads.tools.gui.AngledLinearLayout
                        android:id="@+id/lytProg1NewText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/tvProg1NewText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/mah_dlg_text_view_new_shape"
                            android:paddingBottom="0dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:paddingTop="0dp"
                            android:text="@string/mah_ads_new_text"
                            android:textColor="@color/mah_ads_text_view_new_text_color"
                            android:textSize="13sp"
                            android:textStyle="bold" />
                    </com.mobapphome.mahads.tools.gui.AngledLinearLayout>
                </RelativeLayout>

                <TextView
                    android:id="@+id/tvProg1NameMAHAdsExtDlg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:ellipsize="end"
                    android:gravity="center_horizontal"
                    android:maxLines="2"
                    android:minLines="2"
                    android:text="prog1"
                    android:textColor="@color/mah_ads_all_and_btn_text_color"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lytProg2MAHAdsExtDlg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@color/mah_dlg_btn_yes_no_background_selector"
                android:gravity="center_horizontal|top"
                android:orientation="vertical"
                android:paddingBottom="0dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="0dp" >

                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_height="70dp" >

                    <com.loopj.android.image.SmartImageView
                        android:id="@+id/ivProg2ImgMAHAds"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="0dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:src="@color/mah_ads_no_img_color" />

                    <com.mobapphome.mahads.tools.gui.AngledLinearLayout
                        android:id="@+id/lytProg2NewText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/tvProg2NewText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/mah_dlg_text_view_new_shape"
                            android:paddingBottom="0dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:paddingTop="0dp"
                            android:text="@string/mah_ads_new_text"
                            android:textColor="@color/mah_ads_text_view_new_text_color"
                            android:textSize="13sp"
                            android:textStyle="bold" />
                    </com.mobapphome.mahads.tools.gui.AngledLinearLayout>
                </RelativeLayout>

                <TextView
                    android:id="@+id/tvProg2NameMAHAdsExtDlg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:ellipsize="end"
                    android:gravity="center_horizontal"
                    android:maxLines="2"
                    android:minLines="2"
                    android:text="prog2"
                    android:textColor="@color/mah_ads_all_and_btn_text_color"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/mah_ads_dlg_exit_tv_as_btn_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:background="@color/mah_dlg_btn_other_selector"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/mah_ads_dlg_exit_btn_more_txt_1"
                android:textColor="@color/mah_ads_all_and_btn_text_color"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvQuestionTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="25dp"
            android:text="@string/mah_ads_dlg_exit_question"
            android:textColor="@color/mah_ads_question_txt_color"
            android:textSize="23sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            android:gravity="end"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp">

            <Button
                android:id="@+id/mah_ads_dlg_exit_btn_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
                android:text="@string/mah_ads_dlg_exit_positive_btn_txt"
                android:textColor="@color/mah_ads_yes_no_txt_color"
                android:textSize="17sp" />

            <Button
                android:id="@+id/mah_ads_dlg_exit_btn_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
      		    android:text="@string/mah_ads_dlg_exit_negativ_btn_txt"
                android:textColor="@color/mah_ads_yes_no_txt_color"
                android:textSize="17sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>